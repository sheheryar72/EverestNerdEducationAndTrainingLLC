  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Global Teachers</label>
    <input type="text" class="form-control" name="GlobalTeachers" id="exampleInputPassword1" placeholder="Global Teachers" value="@Model.GlobalTeachers">
  </div>
  
  <button type="submit" class="btn btn-primary" style="margin-top: 2%">Update About Us</button>
