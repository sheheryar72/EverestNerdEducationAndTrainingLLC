    <input type="text" class="form-control" name="WhyChooseUs" id="exampleInputPassword1" placeholder="Why ChooseUs" value="@Model.WhyChooseUs">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Our Mission</label>
    <input type="text" class="form-control" name="OurMission" id="exampleInputPassword1" placeholder="Our Mission" value="@Model.OurMission">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Our Vission</label>
    <input type="text" class="form-control" name="OurVission" id="exampleInputPassword1" placeholder="Our Vission" value="@Model.OurVission">
  </div>
