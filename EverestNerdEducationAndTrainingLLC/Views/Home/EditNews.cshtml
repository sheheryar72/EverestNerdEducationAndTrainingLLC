@model EverestNerdEducationAndTrainingLLC.Models.News

<section style="padding: 5%">
    <div class="text-center">
        <h3>Edit News</h3>
</div>
    <form method="post" action="/Home/UpdateNews/">
  <div class="form-group">
      <input type="hidden" name="Id" value="@Model.Id"/>
    <label for="exampleInputEmail1">Title</label>
    <input type="text" class="form-control" name="Title" id="exampleInputEmail1"  aria-describedby="emailHelp" placeholder="Title" value="@Model.Title">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Description</label>
    <input type="text" class="form-control" name="Description" id="exampleInputPassword1" placeholder="Description" value="@Model.Description">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Image Path</label>
    <input type="text" class="form-control" name="ImagePath" id="exampleInputPassword1" placeholder="Image Path" value="@Model.ImagePath">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Name</label>
    <input type="text" class="form-control" name="Name" id="exampleInputPassword1" placeholder="Name" value="@Model.Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Catagory</label>
    <input type="text" class="form-control" name="Catagory" id="exampleInputCatagory" placeholder="Catagory" value="@Model.Catagory">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Catagory</label>
    <input type="date" class="form-control" name="NewsDate" id="exampleInputCatagory" placeholder="Date" value="@Model.NewsDate">
  </div>
  <button type="submit" class="btn btn-primary" style="margin-top: 2%">Update News</button>
</form>
</section>

